# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|


  config.vm.define "kali1" do |kali|
    kali.vm.box = "kali1"
    kali.ssh.private_key_path = "~/.ssh/kali-1.0"
    kali.ssh.username = "root"
	kali.vm.network "public_network"
	kali.vm.network "private_network", :ip => "172.18.0.9"
	kali.vm.box_url = "http://ftp.sliim-projects.eu/boxes/kali-linux-1.0.4-amd64.box"
	end
end
